<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kamon Theraphy | Login</title>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="style.css">
    <!-- Icons -->
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>
<body>
  <script type="text/javascript">
    function validateForm() {
      var mail = document.forms["login"]["email"];
            if (mail.value == "") {
                alert("Please input your email address");
                mail.focus();
                return false;
            }
      var password = document.forms["login"]["password"]; 
            if (password.value == "") {
                alert("Please input your password");
                password.focus();
                return false;
            }
    }
    function validForm() {
      var user = document.forms["signUp"]["user"];
            if (user.value == "") {
              alert("Fullname cannot be empty");
              user.focus();
              return false;
            }
      var email = document.forms["signUp"]["email"];
            if (email.value == "") {
                alert("Please input your email address");
                email.focus();
                return false;
            }
      var password = document.forms["signUp"]["password"]; 
            if (password.value == "") {
                alert("Please input your password");
                password.focus();
                return false;
            }
      var confam = document.forms["signUp"]["confirm"]; 
            if (confam.value == "") {
                alert("Password shouldn't be empty");
                confam.focus();
                return false;
            }
    }
  </script>
    <div class="container">
        <div class="container1">
            <div class="menu-bar">
                <div class="logo">
                <!-- Image here -->
                <img>
                </div>
                <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/mental">Product</a></li>
                <li><a href="/habit">Solutions</a></li>
                <li><a href="/login">Login/Sign Up</a></li>
                </ul>
                <!-- Mobile Navigation Menu -->
              <div class="topnav">
                <!-- Navigation links (hidden by default) -->
                <div id="myLinks">
                  <a href="/">Home</a>
                  <a href="/product">Product</a>
                  <a href="/faq">Faq</a>
                  <a href="/contact">Contact</a>
                </div>
                <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                  <i class="las la-bars"></i>
                </a>
              </div>
            </div>
            <!-- Main Content -->
            <div class="intro">
                <div class="intro-text">
                    <p>Login / Sign Up</p>
                </div>
                <div class="h-back">
                    <div class="arrow">
                        <img src="Images/arrow_back_ios_24px.png">
                    </div>
                    <div class="home">
                        <a href="/">Home</a>
                    </div>
                </div>
            </div>
            <!-- Login/Register Page -->
            <div class="login">
                <div class="l-title">
                  <%if(LogError){%>
                    <h3 style="color: rgb(236, 64, 64);"> <%=error%> </h3> 
                  <%}%>
                    <h2>Login</h2>
                </div>
                <div class="l-hr"></div>
                <div class="log-form">
                    <form action="/login" method="POST" name="login" onsubmit="return validateForm()">
                        <label for="email" class="email">Email address</label>
                        <input type="email" name="username" placeholder="Dosamarvis@gmail.com">
                        <label for="password">Password</label>
                        <input type="password" name="password">
                        <input type="submit" value="Login" name="submit">
                        <!-- <a href="#">Forgot Passcode?</a> -->
                    </form>
                </div>
            </div>
            <div class="l-title sign">
              <%if(LogError){%>
                <h3 style="color: rgb(236, 64, 64);"> <%=LogError%> </h3> 
              <%}%>
                <h2>Sign Up</h2>
            </div>
            <div class="l-hr s-hr"></div>
            <div class="sign-form" id="signUp">
                <form action="/registerUsers" method="POST" onsubmit="return validForm()">
                    <label for="full-name">First Name</label>
                    <input required type="text" name="firstName" placeholder="Enter your first name" >
                    <input required type="hidden" name="id" >
                    <label for="address">Last Name</label>
                    <input required type="text" name="lastName" placeholder="Enter your last name" class="address">
                    <label for="email" class="email sign">Email address</label>
                    <input required type="email" name="email" placeholder="Dosamarvis@gmail.com">
                    <label for="password" class="pass">Phone Number</label>
                    <input required type="password" name="phone">
                    <label for="confirm">  Password</label>
                    <input required type="password" name="password" class="confirm">
                    <input  type="submit" value="Sign Up">
                    <!-- <a href="#">Forgot Passcode?</a> -->
                </form>
            </div>
            <div class="download short reg">
                <div class="app">
                  <h2>Download our mobile app.</h2>
                </div>
                <div class="avail">
                  <h4>Available on your favorite store. Start your premium experience now</h4>
                </div>
                <div class="playstore">
                  <button>
                    <a href="#">Playstore</a>
                  </button>
                </div>
                <div class="appstore">
                  <button>
                    <a href="#">App store</a>
                  </button>
                </div>
              </div>
              <div class="foot footer log">
                <div class="another-bg"></div>
                <div class="tweet">
                  <a href="#"><img src="Images/Vector-tweet.png"></a>
                </div>
                <div class="fb">
                  <a href="#"><img src="Images/Vector-fb.png"></a>
                </div>
                <div class="ig">
                  <a href="#"><img src="Images/Vector-ig.png" alt="IG"></a>
                </div>
                <p>&copy; Copywright 2020 HighQ Innovations</p>
              </div>
        </div>
    </div>
    <!-- Custom JS -->
    <script src="JS/bootstrap.min.js"></script>
</body>
</html>